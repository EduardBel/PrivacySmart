{

    "manifest_version": 2,
    "name": "Plugin TFG",
    "version": "1.0",
    
    "description": "Intentant que funcioni web3.",
    "icons": {
      "48": "icons/border-48.png"
    },
    "browser_action": {
      "default_icon": "icons/border-48.png",
      "default_title": "TFG Eduard",
      "default_popup": "popup/index.html",
      "browser_style": true
    },  
    "permissions": [
        "storage",
        "webRequest",
        "webRequestBlocking",
        "activeTab",
        "tabs",
        "<all_urls>"
    ],
    "background": {
      "scripts": ["background/background.js"],
      "persistent": false
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["browserified-content.js"]
      }
    ]
    
  
  }